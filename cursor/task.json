
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate Xcode Project with XcodeGen",
            "type": "shell",
            "command": "xcodegen",
            "args": [
                "generate"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Build Swift Project",
            "type": "shell",
            "command": "xcodebuild",
            "args": [
            "-project",
                "todoapp.xcodeproj",
                "-scheme",
                "MyZunderApp",
                "-configuration",
                "Debug",
                "clean",
                "build"
            ],
            "problemMatcher": [
                "$xcodebuild"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "runOn": "default"
            }
        }
    ]
}